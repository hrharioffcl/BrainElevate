<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add new Chapter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="d-flex" style="background-color: black;">

    <!-- Sidebar -->
    <%- include("partials/superadminsidebar") %>

        <!-- Main Content -->
        <div class="main-content flex-grow-1 p-4 text-dark " style="background-color:#F8FAFC;"><!-- Flash Messages -->
            <% if (messages.error && messages.error.length> 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= messages.error[0] %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                    <% if (messages.success && messages.success.length> 0) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= messages.success[0] %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-md-6"> <!-- change 6 to 4 or 5 for narrower -->

                                        <div class="page-header d-flex justify-content-between align-items-center ">
                                            <h2>Add New Chapter</h2>
                                            <a href="/admin/coursesmangement/update/<%= course._id %>"
                                                class="btn btn-danger">Cancel</a>
                                        </div>

                                        <form action="/admin/courses/<%= course._id %>/chapters/add" method="POST"
                                            class="mt-4">

                                            <div class="mb-3">
                                                <label class="form-label">Chapter Title</label>
                                                <input type="text" class="form-control" name="title">
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Upload Lecture Video</label>
                                                <input type="file" class="form-control" name="lectureVideo"
                                                    accept="video/*">
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Lecture Description</label>
                                                <textarea class="form-control" name="lectureDescription"
                                                    rows="4"></textarea>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Lecture Notes</label>
                                                <textarea class="form-control" name="lectureNotes" rows="4"></textarea>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Upload PDF</label>
                                                <input type="file" class="form-control" name="lecturePdf"
                                                    accept="application/pdf,.doc,.docx,.txt">
                                            </div>

                                            <div class="row mb-3">
                                                <!-- Status Dropdown -->
                                                <div class="col-md-6">
                                                    <label class="form-label">Status</label>
                                                    <select class="form-select" name="status">
                                                        <option value="draft" selected>Draft</option>
                                                        <option value="pendingApproval">Pending Approval</option>
                                                        <option value="published">Published</option>
                                                    </select>
                                                </div>

                                                <!-- Order Input -->
                                                <div class="col-md-2">
                                                    <label class="form-label">Order</label>
                                                    <input type="number" class="form-control form-control-sm"
                                                        name="order" maxlength="3" style="width:80px;">
                                                </div>
                                            </div>


                                            <div class="d-flex justify-content-end">
                                                <button type="submit" class="btn btn-dark">Save Chapter</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
        </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



</html>