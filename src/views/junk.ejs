  <!-- Promotion -->
                  <div class="tab-pane fade" id="promotion">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <h4>Coupons</h4>


                      <% if (course && course._id) { %>
                        <a href="/admin/coupons/new" class="btn btn-dark">New
                          Coupon</a>
                        <% } else { %>
                          <span class="text-muted">Save the course first to add Coupons</span>
                          <% } %>
                    </div>

                    <table class="table table-hover align-middle">
                      <thead>
                        <tr>
                          <th scope="col">Offer Name</th>
                          <th scope="col">Code</th>
                          <th scope="col">Amount</th>
                          <th scope="col">Status</th>
                          <th scope="col">Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (coupons && coupons.length> 0) { %>
                          <% coupons.forEach(coupon=> { %>
                            <tr>
                              <td>
                                <%= coupon.couponName %>
                              </td>
                              <td>
                                <%= coupon.couponCode %>
                              </td>
                              <td>
                                <% if (coupon.discountType==='Percentage' ) { %>
                                  <%= coupon.discountValue %>%
                                    <% } else { %>
                                      $<%= coupon.discountValue %>
                                        <% } %>
                              </td>
                              <td>
                                <% if (coupon.status==='Active' ) { %>
                                  <span class="text-success fw-bold">Active</span>
                                  <% } else if (coupon.status==='Expired' ) { %>
                                    <span class="text-danger fw-bold">Expired</span>
                                    <% } else if (coupon.status==='Draft' ) { %>
                                      <span class="text-muted fw-bold">Draft</span>
                                      <% } else { %>
                                        <span class="text-primary fw-bold">
                                          <%= coupon.status %>
                                        </span>
                                        <% } %>
                              </td>
                              <td>
                                <a href="/admin/coupons/<%= coupon._id %>/edit" class="text-success me-2">Edit</a>
                                <a href="/admin/coupons/<%= coupon._id %>/delete" class="text-danger"
                                  onclick="return confirm('Are you sure you want to delete this coupon?')">Delete</a>
                              </td>
                            </tr>
                            <% }) %>
                              <% } else { %>
                                <tr>
                                  <td colspan="5" class="text-center">No coupons created yet.</td>
                                </tr>
                                <% } %>
                      </tbody>
                    </table>
                  </div>




                  <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#promotion">Promotion</a>
                  </li>