<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage-Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="d-flex " style="background-color: black">
  <style>
    body {
      background: #111;
      color: #fff;

    }

    .modal {
      color: #000000;
      justify-content: center;
      align-items: center;
    }

    .addadminbtn {
      background-color: #1abc9c;
    }


    .custom-select {
      background-color: transparent !important;
      border: 2px solid #1abc9c !important;
      color: #1abc9c !important;
    }

    .custom-select:focus {
      border-color: #1abc9c !important;
      box-shadow: 0 0 0 0 rgba(26, 188, 156, 0.25) !important;
      /* green glow instead of blue */
      outline: none !important;
    }

    /* Dropdown options */
    .custom-select option {
      background-color: transparent !important;
      color: #1abc9c !important;
    }


    .search-box {
      background: #1a1a1a;
      border: none;
      color: #fff;
    }

    .search-box::placeholder {
      color: #888;
    }

    .table-header {
      background: #000000;
    }
    .table td,
    .table th {
      vertical-align: middle;
    }

    .btn-teal {
      background-color: #1abc9c;
      color: #fff;
    }

    /* Dark theme pagination */
    .pagination-dark .page-link {
      background: #1a1a1a;
      color: #fff;
      border: none;
      margin: 0 5px;
      /* tighter spacing */
      width: 32px;
      /* equal width/height */
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      /* smaller font */
      padding: 0;
      /* remove Bootstrap default padding */
    }

    /* Active page circle */
    .pagination-dark .active .page-link {
      background: #1abc9c;
      border-radius: 50%;
    }

    /* Round prev/next as well */
    .page-link.rounded-circle {
      border-radius: 50% !important;
    }

    /* On small screens make them even smaller */
    @media (max-width: 576px) {
      .pagination-dark .page-link {
        width: 28px;
        height: 28px;
        font-size: 12px;
      }
    }
  </style>
  <!-- Sidebar -->
  <%- include("partials/superadminsidebar") %>


    <!-- Main Content -->
    <div class="main-content p-4 w-100">
      <h4 class="text-white mb-4">Admin Management</h4>



      <!-- Top controls -->
      <div class="d-flex justify-content-between align-items-center mb-3 gap-2 flex-wrap">


        <!-- <form method="GET" action="/admin/manage-admin" class="d-flex gap-2 flex-wrap">
<!-- 🔍 Search -->
        <form method="GET" action="/admin/manage-admin" class="d-flex gap-2">
          <input type="text" name="search" class="form-control search-box w-auto" placeholder="Search admins..."
            value="<%= search || '' %>" onkeypress="if(event.key === 'Enter'){ this.form.submit(); }">
          <% if (sortRole && sortRole !=='all' ) { %>
            <input type="hidden" name="role" value="<%= sortRole %>">
            <% } %>
              <% if (timeFilter) { %>
                <input type="hidden" name="time" value="<%= timeFilter %>">
                <% } %>
        </form>

        <!--Role filter -->
        <form method="GET" action="/admin/manage-admin" class="d-inline-block">
          <select name="role" class="form-select custom-select rounded-pill w-auto" onchange="this.form.submit()">
            <option value="all" <%=sortRole==='all' ? 'selected' : '' %>>Permissions All</option>
            <option value="admin" <%=sortRole==='admin' ? 'selected' : '' %>>Admin</option>
            <option value="contributor" <%=sortRole==='contributor' ? 'selected' : '' %>>Contributor</option>
          </select>
          <% if (search) { %><input type="hidden" name="search" value="<%= search %>">
            <% } %>
              <% if (timeFilter) { %><input type="hidden" name="time" value="<%= timeFilter %>">
                <% } %>
        </form>

        <!-- time filter -->
        <form method="GET" action="/admin/manage-admin" class="d-inline-block">
          <select name="time" class="form-select custom-select rounded-pill w-auto" onchange="this.form.submit()">
            <option value="">Joined Anytime</option>
            <option value="lastMonth" <%=timeFilter==="lastMonth" ? 'selected' : '' %>>Last 30 days</option>
            <option value="lastYear" <%=timeFilter==="lastYear" ? 'selected' : '' %>>Last Year</option>
          </select>
          <% if (search) { %><input type="hidden" name="search" value="<%= search %>">
            <% } %>
              <% if (sortRole && sortRole !=='all' ) { %><input type="hidden" name="role" value="<%= sortRole %>">
                <% } %>
        </form>

        <!--Export -->
        <form method="GET" action="/admin/manage-admin" class="d-inline-block">
          <input type="hidden" name="export" value="csv">
          <% if (search) { %><input type="hidden" name="search" value="<%= search %>">
            <% } %>
              <% if (sortRole && sortRole !=='all' ) { %><input type="hidden" name="role" value="<%= sortRole %>">
                <% } %>
                  <% if (timeFilter) { %><input type="hidden" name="time" value="<%= timeFilter %>">
                    <% } %>
                      <button type="submit" class="btn btn-outline-light rounded-pill">Export</button>
        </form>





        <!-- Add new -->
        <button class="btn addadminbtn rounded-pill" data-bs-toggle="modal" data-bs-target="#addAdminModal">
          + Add Admin
        </button>

        <!-- Modal -->
        <div class="modal fade" id="addAdminModal" tabindex="-1" data-bs-backdrop="static">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content ">
              <form action="/admin/addadmin" method="POST" novalidate>
                <div class="modal-header">
                  <h5 class="modal-title">Add Admin</h5>
                </div>
                <div class="modal-body">
                  <% if (messages.error && messages.error.length> 0) { %>
                    <div class="alert alert-danger">
                      <%= messages.error[0] %>
                    </div>
                    <% } %>


                      <!-- Full Name -->
                      <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" name="fullName" class="form-control border-0 border-bottom"
                          placeholder="enter admins full name" required>
                      </div>
                      <!-- Email -->
                      <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control border-0 border-bottom"
                          placeholder="enter admins mail id" required>
                      </div>

                      <!-- password -->
                      <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                          <input type="password" name="password" class="form-control border-0 border-bottom"
                            id="password" placeholder="Enter your password" required>

                          <span class="input-group-text bg-transparent border-0" style="cursor: pointer;"
                            onclick="togglePassword('password')">
                            <i class="bi bi-eye" id="toggleIcon"></i>
                          </span>
                        </div>
                      </div>

                      <script>
                        function togglePassword(id) {
                          const input = document.getElementById(id);
                          const icon = document.getElementById('toggleIcon');
                          if (input.type === "password") {
                            input.type = "text";
                            icon.classList.remove("bi-eye");
                            icon.classList.add("bi-eye-slash");
                          } else {
                            input.type = "password";
                            icon.classList.remove("bi-eye-slash");
                            icon.classList.add("bi-eye");
                          }
                        }
                      </script>


                      <!-- confirm password -->
                      <div class="mb-3">
                        <label for="password" class="form-label">Confirm Password</label>
                        <div class="input-group">
                          <input type="password" name="confirmPassword" class="form-control border-0 border-bottom"
                            id="password" placeholder="Confirm Password" required>

                        </div>
                      </div>
                      <!-- Role -->
                      <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select w-auto">
                          <option value="admin" style="background-color: #ff0404;">Admin/Manager</option>
                          <option value="contributor" style="background-color: #00b7ff;">Contributer</option>
                        </select>
                      </div>


                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn  addadminbtn">create Admin</button>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>



      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-dark align-middle table-borderless">
          <thead class="table-header">
            <tr>

              <th>Full Name</th>
              <th>Email Address</th>
              <th>Location</th>
              <th>Joined</th>
              <th>Permissions</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (admins.length> 0) { %>
              <% admins.forEach(admin=> { %>
                <% if (admin.role !=='super_admin' ) { %>
                  <tr>
                    <td class="d-flex align-items-center gap-2">
                      <img src="<%= admin.profilePic %>" class="rounded-circle" width="35" height="35">
                      <span>
                        <%= admin.fullName %>
                      </span>
                    </td>
                    <td>
                      <%= admin.email %>
                    </td>
                    <td><i class="bi bi-geo-alt-fill text-danger"></i>
                      <%= admin.location %>
                    </td>
                    <td>
                      <%= admin.createdAt ? new Date(admin.createdAt).toLocaleString("en-GB", { day: "2-digit" ,
                        month: "short" , year: "numeric" , hour: "2-digit" , minute: "2-digit" , hour12: true }) : "" %>
                    </td>
                    <td>
                      <% if(admin.role==='admin' ){ %>
                        <span class="badge bg-danger">Admin</span>
                        <% } else { %>
                          <span class="badge bg-info">Contributor</span>
                          <% } %>
                    </td>
                
                    <td>
                      <a href="/admin/edit/<%= admin._id %>" class="text-info me-2 ">Edit</a>

                      <form action="/admin/delete/<%= admin._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-link text-danger p-0 m-0"
                          onclick="return confirm('Are you sure you want to delete this admin?');">
                          Delete
                        </button>
                      </form>
                    </td>

                   
                  </tr>
                  <% } %>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="6" class="text-center">No results found</td>
                          <% if (search) { %> for search "<%= search %>" <% } %>
                                <% if (sortRole && sortRole !=='all' ) { %> with role "<%= sortRole %>" <% } %>
                                      <% if (timeFilter && timeFilter !=='all' ) { %> in "<%= timeFilter %>" <% } %>
                        </tr>
                        <% } %>
          </tbody>
        </table>
      </div>



      <!-- Pagination -->
      <nav class="d-flex  justify-content-center mt-3">
        <ul class="pagination pagination-dark pagination-sm flex-wrap">
          <!-- Previous button -->
          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link rounded-circle"
              href="/admin/manage-admin?page=<%= currentPage - 1 %>&role=<%= sortRole %>&time=<%= timeFilter %>&search=<%= search %>">‹</a>
          </li>

          <!-- Page numbers -->
          <% for(let i=1; i <=totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link rounded-circle"
                href="/admin/manage-admin?page=<%= i %>&role=<%= sortRole %>&time=<%= timeFilter %>&search=<%= search %>">
                <%= i %>
              </a>
            </li>
            <% } %>

              <!-- Next button -->
              <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                <a class="page-link rounded-circle"
                  href="/admin/manage-admin?page=<%= currentPage + 1 %>&role=<%= sortRole %>&time=<%= timeFilter %>&search=<%= search %>">›</a>
              </li>
        </ul>
      </nav>

    </div>
</body>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    <% if (messages.error && messages.error.length > 0) { %>
      var myModal = new bootstrap.Modal(document.getElementById('addAdminModal'));
      myModal.show();
    <% } %>
  });
</script>


</html>