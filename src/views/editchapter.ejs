<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Chapter</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="d-flex" style="background-color: black;">

  <!-- Sidebar -->
  <%- include("partials/superadminsidebar") %>

  <!-- Main Content -->
  <div class="main-content flex-grow-1 p-4 text-dark" style="background-color:#F8FAFC;">
    


    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">

          <div class="page-header d-flex justify-content-between align-items-center">
            <h2>Edit Chapter</h2>
            <a href="/admin/coursesmangement/update/<%= course._id %>" class="btn btn-danger">Cancel</a>
          </div>

          <!-- âœ… Form for editing -->
          <form action="/admin/courses/<%= course._id %>/chapters/<%= chapter._id %>/edit" method="POST" class="mt-4">

            <!-- Chapter Title -->
            <div class="mb-3">
              <label class="form-label">Chapter Title</label>
              <input type="text" class="form-control" name="title" value="<%= chapter.title %>">
            </div>

            <!-- Lecture Video -->
            <div class="mb-3">
              <label class="form-label">Upload Lecture Video</label>
              <input type="file" class="form-control" name="lectureVideo" accept="video/*">
              <% if (chapter.lectureVideo) { %>
                <small class="text-muted">Current: <%= chapter.lectureVideo %></small>
              <% } %>
            </div>

            <!-- Lecture Description -->
            <div class="mb-3">
              <label class="form-label">Lecture Description</label>
              <textarea class="form-control" name="lectureDescription" rows="4"><%= chapter.lectureDescription %></textarea>
            </div>

            <!-- Lecture Notes -->
            <div class="mb-3">
              <label class="form-label">Lecture Notes</label>
              <textarea class="form-control" name="lectureNotes" rows="4"><%= chapter.lectureNotes %></textarea>
            </div>

            <!-- PDF Upload -->
            <div class="mb-3">
              <label class="form-label">Upload PDF</label>
              <input type="file" class="form-control" name="lecturePdf" accept="application/pdf,.doc,.docx,.txt">
              <% if (chapter.lecturePdf) { %>
                <small class="text-muted">Current: <%= chapter.lecturePdf %></small>
              <% } %>
            </div>

            <div class="row mb-3">
              <!-- Status Dropdown -->
              <div class="col-md-6">
                <label class="form-label">Status</label>
                <select class="form-select" name="status">
                  <option value="draft" <%= chapter.status === "draft" ? "selected" : "" %>>Draft</option>
                  <option value="pendingApproval" <%= chapter.status === "pendingApproval" ? "selected" : "" %>>Pending Approval</option>
                  <option value="published" <%= chapter.status === "published" ? "selected" : "" %>>Published</option>
                </select>
              </div>

              <!-- Order -->
              <div class="col-md-2">
                <label class="form-label">Order</label>
                <input type="number" class="form-control form-control-sm" name="order" maxlength="3" style="width:80px;" value="<%= chapter.order %>">
              </div>
            </div>

            <!-- Save Button -->
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-dark">Update Chapter</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
  <%- include("partials/flashalerts") %>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</html>
