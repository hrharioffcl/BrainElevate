<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.fullName %> | My Learning</title>
 

      <link rel="stylesheet" href="/css/header.css" >
  <link rel="stylesheet" href="/css/profile.css">
   <link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>

    <%- include('partials/header') %>

<%- include('partials/profileTabs', { activeTab: 'wishlist' }) %>


 
<section class="learning-cart">
  <div class="cart-container">
    <h3 class="cart-title">My Wishlist (<%= wishlist.length %>)</h3><hr>

    <% if (wishlist.length === 0) { %>
      <p class="text-muted text-center py-5">Your wishlist is empty ❤️</p>
    <% } else { %>
      <table class="table align-middle">
        <thead>
          <tr>
         
          </tr>
        </thead>
        <tbody>
          <% wishlist.forEach(item => { %>
            <tr class="cart-row">
              <td>
                <div class="d-flex align-items-center">
                  <a href="/courses/<%= item.courseId._id %>">
                    <img src="<%= item.courseId.thumbnail %>" 
                         alt="<%= item.courseId.name %>" 
                         class="cart-course-img">
                  </a>
                  <div class="cart-details">
                    <h6 class="mb-1 cart-title">
                      <a href="/courses/<%= item.courseId._id %>" class="cartCourse">
                        <%= item.courseId.name %>
                      </a>
                    </h6>
                    <small class="text-muted d-block">Course by: <%= item.courseId.author %></small>
                    <small class="text-muted d-block">
                      <i class="bi bi-star-fill text-warning"></i>
                      <%= item.courseId.rating %> (<%= item.courseId.reviewCount || "0" %> Reviews)
                    </small>
                    <strong>₹<%= item.courseId.price %></strong>
                  </div>
                </div>
              </td>

              <td class="text-end">
                <form action="/addToWishList" method="POST" class="d-inline">
                  <input type="hidden" name="courseId" value="<%= item.courseId._id %>">
                  <input type="hidden" name="redirectTo" value="/profile/<%= user._id %>/wishlist">
                  <button type="submit" class="btn btn-link text-decoration-none p-0 remove-btn">
               <img src="data:image/svg+xml;base64," 
     alt="delete" width="16" height="16">

                  </button>
                </form>

              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</section>


        <%- include("partials/flashalerts") %>

  <!-- Footer -->
          <%- include('partials/footer') %>


</body>
</html>
