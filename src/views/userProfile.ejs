<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.fullName %> | Dashboard</title>
  
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
      <link rel="stylesheet" href="/css/header.css" >
  <link rel="stylesheet" href="/css/profile.css">
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"rel="stylesheet">

</head>
<body>

    <%- include('partials/header') %>

<%- include('partials/profileTabs', { activeTab: 'profile' }) %>



  <!-- Wallet Section -->
  <section class="wallet">
    <div class="wallet-box">
      <h1>My Wallet</h1>
      <h2>Balance: â‚¹<%= user.walletBalance %></h2>
      <form action="/wallet/add" method="POST">
        <input type="number" name="amount" placeholder="Enter amount" min="1" required>
        <button type="submit">Add Money</button>
      </form><br>
      <a href="/wallet/transactions">Show transaction history</a>
    </div>
  </section>

  <!-- Learning Section -->
  <section class="learning">
    <h3>Let's start learning, <%= user.fullName.split(' ')[0] %>!</h3>
    <div class="courses">
      <% courses.forEach(course => { %>
        <div class="course-card">
          <img src="<%= course.image %>" alt="<%= course.name %>">
          <div class="course-info">
            <h4><%= course.name %></h4>
            <p>Progress: <%= course.progress %>%</p>
            <progress value="<%= course.progress %>" max="100"></progress>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Footer -->
          <%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
