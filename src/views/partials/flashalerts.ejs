<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  <% if (messages.success && messages.success.length > 0) { %>
    Swal.fire({
      icon: "success",
      title: "<%= messages.success[0] %>",
      position: "top",
      toast: true,               // âœ… makes it small & card-like
      background: "#fff",        // card background
      color: "#111",             // text color
      showConfirmButton: false,  
      timer: 2500,               // auto-close
      timerProgressBar: true,
      width: "350px",            // card size
      customClass: {
        popup: "rounded shadow-lg" // rounded card w/ shadow
      }
    });
  <% } %>

  <% if (messages.error && messages.error.length > 0) { %>
    Swal.fire({
      icon: "error",
      title: "<%= messages.error[0] %>",
      position: "top",
      toast: true,
      background: "#fff",
      color: "#c0392b",
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true,
      width: "350px",
      customClass: {
        popup: "rounded shadow-lg"
      }
    });
  <% } %>

  <% if (messages.info && messages.info.length > 0) { %>
    Swal.fire({
      icon: "info",
      title: "<%= messages.info[0] %>",
      position: "top",
      toast: true,
      background: "#fff",
      color: "#2980b9",
      showConfirmButton: false,
      timer: 2500,
      timerProgressBar: true,
      width: "350px",
      customClass: {
        popup: "rounded shadow-lg"
      }
    });
  <% } %>
</script>
